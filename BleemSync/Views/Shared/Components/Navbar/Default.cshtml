@model BleemSync.ViewModels.NavbarViewModel
@using BleemSync.Services.Extensions;

<nav class="navbar navbar-inverse navbar-fixed-top pmd-navbar pmd-z-depth">
    <div class="container-fluid">
        <div class="navbar-header">
            <a href="javascript:void(0);" data-target="sidebar" data-placement="left" data-position="slidepush" is-open="true" class="btn btn-sm pmd-btn-fab pmd-btn-flat pmd-ripple-effect pull-left pmd-sidebar-toggle">
                <i class="material-icons md-light">menu</i>
            </a>
            <a href="/" class="navbar-brand"><img src="~/img/logo.png" alt="BleemSync Logo" style="width: 96px;" /></a>
        </div>

        <div class="pmd-navbar-right-icon pull-right">
            <form id="switch-destination-device"
                  asp-controller="UsbApi"
                  asp-action="SwitchDestinationDevice"
                  enctype="multipart/form-data"
                  data-ajax="true"
                  data-ajax-method="POST"
                  data-ajax-success="DeviceSwitched"
                  data-ajax-failure="XHRError">
                <span class="dropdown pmd-dropdown clearfix">
                    <button class="btn pmd-ripple-effect btn-primary dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-expanded="true">
                        <i class="material-icons">usb</i>
                        @if (Model.CurrentDrive != null)
                        {
                            <text>@Model.CurrentDrive.VolumeLabel (@Model.CurrentDrive.RootDirectory)</text>
                        }
                        else
                        {
                            <text>Choose drive</text>
                        }
                        <span class="caret"></span>
                    </button>
                    <ul aria-labelledby="dropdownMenuDivider" role="menu" class="dropdown-menu">
                        @foreach (var drive in Model.Drives)
                        {
                            if (drive.DriveIsFormattedProperly())
                            {
                                var driveUsagePercent = ((decimal)(drive.TotalSize - drive.TotalFreeSpace) / (decimal)drive.TotalSize) * 100;

                                <li>
                                    <button name="Drive" value="@drive" class="btn btn-block usb-switcher-drive" href="about:blank">
                                        @drive.VolumeLabel (@drive.RootDirectory)
                                        <div class="usb-switcher-drive-stats text-center">
                                            <div class="progress-rounded progress pmd-progress">
                                                <div class="progress-bar progress-bar-info" style="width: @driveUsagePercent%;"></div>
                                            </div>
                                            <small>@drive.GetHumanReadableUsedSpace() / @drive.GetHumanReadableTotalSpace()</small>
                                        </div>
                                    </button>
                                </li>
                            }
                        }
                    </ul>
                </span>
            </form>
        </div>
    </div>
</nav>